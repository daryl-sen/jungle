<section class="order-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <p>Associated Email Address: <%= @email %></p>
    <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @ordered_items.each do |item| %>
          <tr>
            <td><img src="<%= item[:product].image %>" alt=""></td>
            <td>
              <h4><%= item[:product].name %></h4><br>
              <p>
                <%= item[:product].description %>
              </p>
            </td>
            <td>
              <%= humanized_money_with_symbol item[:item_price] %>
            </td>
            <td>
              <%= item[:quantity] %>
            </td>
            <td>
              <%= humanized_money_with_symbol item[:total_price] %>
            </td>
          </tr>
          
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= @order_total %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
