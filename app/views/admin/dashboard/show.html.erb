<h1>Admin::Dashboard</h1>
<p>
  Product count: <%= @product_count %>
</p>
<p>
  Category count: <%= @category_count %>
</p>
<hr/>
<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
  </tr>
<% for category in @category_list %>
  <tr>
    <td><%= category.id %></td>
    <td><%= category.name %></td>
  </tr>
  
<% end %>
</table>
<hr>
<p>
  <%= link_to "Create new category", "/admin/new_category", class: "btn btn-primary" %>
</p>
